{% extends 'base.html.twig' %}

{% block content %}
    {% block banner %}

    {% endblock %}

<div class="wrapper top-panel">
    <div class="">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="header-title"><span class="uppercase">{% if app.user.userSettings %}
                        {{ app.user.userSettings.tradeName }}'s Bag {% endif %}</span></h1>
                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="flash-notice">
                        <p>{{ flash_message }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="panel-body container">
                <table class="table table-hover order">
                    <thead>
                    <tr>
                        <th><span><a href="#">Product Name</a></span></th>
                        <th><span>Strength</span></th>
                        <th><span>Size</span></th>
                        <th><span>Price</span></th>
                        <th><span>Count</span></th>
                        <th><span>Cost</span></th>
                        <th><span>Actions</span></th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                    <tfoot>
                    <tr>
                        <td class="total-count" colspan="2"><span>Selected count </span> 0</td>
                        <td class="total-price" colspan="2"><span>Selected price </span> $0</td>
                        <td class="create_invoice" colspan="2">
                            {% if app.user.isValid == 1 %}
                            <a href="{{ path('submit_order', {'state':1})}}" class="btn btn-success">Submit order</a>
                            {% else %}
                                <a href="{{ path('user_settings') }}" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span>&nbsp;Credit Application</a>
                            <p>Please write your credit application</p>
                            {% endif %}
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
    {% endblock content %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
