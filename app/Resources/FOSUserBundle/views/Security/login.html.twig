{% extends 'base.html.twig' %}
{#{% extends "FOSUserBundle::layout.html.twig" %}#}
{% block content %}
    <div class="container">
        <div class="row main-content">
            <div class="col-md-4">
                {% block fos_user_content %}
                    {% if error %}
                        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="text" class="form-control" id="username" name="_username"
                                   value="{{ last_username }}" required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="password" class="form-control" id="password" name="_password"
                                   required="required"/>
                        </div>
                        <div class="form-group">
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        </div>
                        <input type="submit" class="btn btn-success" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                        <a href="{{ path('fos_user_registration_register') }}"
                           class="btn btn-success">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a>
                    </form>
                {% endblock fos_user_content %}
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">AAROGYA MED LLC</h3>
                    </div>
                    <div class="panel-body">
                        <p>AAROGYA MEDSURG LLC is a Pharmacy - Wholesalers licensed to practice in California. Our
                            management team has a combined years of commitment to quality, service and overall
                            satisfaction within the pharmaceutical and manufacturing industries. Our staff has worked in
                            all 50 states serving the WHOLESALE needs of both healthcare providers, employer health
                            clinics and government facilities.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
