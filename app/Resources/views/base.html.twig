<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {% block metadata %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
            <meta name="description" content="">
            <meta name="author" content="">
        {% endblock %}
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('jquery_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('jquery_components/bootstrap/dist/css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block menu %}
                <nav class="navbar navbar-fixed-top">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('homepage') }}">Brand</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{ path('homepage') }}">Home<span class="sr-only">(current)</span></a></li>
                                <li><a href="{{ path('about_us') }}">About us</a></li>
                                <li><a href="{{ path('why_directrex') }}">Why Directrex</a></li>
                                <li><a href="{{ path('products') }}">Products</a></li>
                                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            {% endblock %}
            {% block banner %}
                <div id="slider">
                    <figure>
                        <img src="https://media.licdn.com/mpr/mpr/AAEAAQAAAAAAAAl6AAAAJDg2OTlkMzc3LTA5NzMtNDc1OS04MzYxLWMzMjM5MmIwYTg1Zg.jpg" alt>
                        <img src="https://media.licdn.com/mpr/mpr/AAEAAQAAAAAAAAkbAAAAJDEzMjgxY2NkLTMyM2ItNGFmMC1hOGJlLTU4M2JiOGJhMzdkNg.jpg" alt>
                        <img src="https://media.licdn.com/mpr/mpr/AAEAAQAAAAAAAAibAAAAJDhlM2UwNDc3LWNkY2QtNGJiNy04Y2FhLThkZDJlYTJjMjhkNA.jpg" alt>
                        <img src="https://media.licdn.com/mpr/mpr/AAEAAQAAAAAAAAgCAAAAJDY1ZGVjZjQ4LTc1ZjQtNDQ2YS04ZjFmLWIxZTM0NjE1NjU2Ng.jpg" alt>
                    </figure>
                </div>
            {% endblock %}
            {% block content %}
            {% endblock %}
            {% block footer %}
                <footer class="footer">
                    <div class="container">
                        <p class="text-muted">Place sticky footer content here.</p>
                    </div>
                </footer>
            {% endblock %}
        {% endblock %}
        <script type="text/javascript" src="{{ asset('jquery_components/jquery/dist/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('jquery_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
