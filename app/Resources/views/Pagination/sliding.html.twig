{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<nav aria-label="Page navigation">
    <ul class="pagination">
    {% if first is defined and current != first %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}"><span aria-hidden="true">&laquo;</span></a>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><span aria-hidden="true">&lsaquo;</span></a>
        </li>

    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li>
                <a class="active">{{ page }}</a>
            </li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <li>
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"><span aria-hidden="true">&rsaquo;</span></a>
        </li>
    {% endif %}

    {% if last is defined and current != last %}
        <li>
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}"><span aria-hidden="true">&raquo;</span></a>
        </li>
    {% endif %}
    </ul>
</nav>
{% endif %}
